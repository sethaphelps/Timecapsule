<html class="signup">
<div>
    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input col-md-6" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input col-md-6" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input col-md-6" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-danger profile-btn" type="submit">signup</button>
        <button class="btn btn-sm btn-danger profile-btn"><a class="profile-btn" href="/">Back to Login</a></button>
        <p class="text-danger sign-again"> </p>       
      </div>
    </form>
  </div>
</div>
<script src="./js/signup.js"></script>
</html>